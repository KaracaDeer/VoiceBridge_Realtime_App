def test_hdfs_system():
    """Test HDFS simulator"""
    logger.info("Testing HDFS System...")

    try:
        hdfs = get_hdfs_simulator()

        # Test basic operations
        test_file = "test_audio.wav"
        if not os.path.exists(test_file):
            # Create a dummy test file
            with open(test_file, "w") as f:
                f.write("dummy audio data")

        # Test file operations
        upload_success = hdfs.put_file(test_file, "/audio/test_audio.wav")
        if upload_success:
            logger.info("‚úÖ HDFS file upload successful")

        files = hdfs.list_files("/")
        if files:
            logger.info(f"‚úÖ HDFS file listing successful ({len(files)} files)")

        # Test audio dataset manager
        dataset_manager = AudioDatasetManager(hdfs)
        datasets = dataset_manager.list_datasets()
        logger.info(f"‚úÖ Audio dataset manager initialized ({len(datasets)} datasets)")

        # Get storage info
        storage_info = hdfs.get_storage_info()
        logger.info(
            f"‚úÖ HDFS storage info: {storage_info['file_count']} files, {storage_info['total_size_mb']:.2f} MB"
        )

        # Cleanup
        if os.path.exists(test_file):
            os.remove(test_file)

        assert True

    except Exception as e:
        logger.error(f"‚ùå HDFS test failed: {e}")
        return False


