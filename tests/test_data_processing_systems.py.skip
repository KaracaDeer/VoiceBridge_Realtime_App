def test_cloud_storage():
    """Test cloud storage systems"""
    logger.info("Testing Cloud Storage Systems...")

    try:
        cloud_manager = get_cloud_manager()

        # Test BigQuery
        bigquery = cloud_manager.bigquery
        dataset_created = bigquery.create_dataset("test_dataset")
        if dataset_created:
            logger.info("‚úÖ BigQuery dataset creation successful")

        # Test GCS
        gcs = cloud_manager.gcs
        test_file = "test_cloud_file.txt"
        with open(test_file, "w") as f:
            f.write("test cloud data")

        gcs_upload = gcs.upload_file(test_file, "test/test_file.txt")
        if gcs_upload:
            logger.info("‚úÖ GCS file upload successful")

        gcs_files = gcs.list_files("test/")
        if gcs_files:
            logger.info(f"‚úÖ GCS file listing successful ({len(gcs_files)} files)")

        # Test S3
        s3 = cloud_manager.s3
        test_data = b"test s3 data"
        s3_upload = s3.put_object("test/test_s3.txt", test_data)
        if s3_upload:
            logger.info("‚úÖ S3 object upload successful")

        s3_objects = s3.list_objects("test/")
        if s3_objects:
            logger.info(f"‚úÖ S3 object listing successful ({len(s3_objects)} objects)")

        # Test analytics pipeline setup
        pipeline_setup = cloud_manager.setup_analytics_pipeline()
        if pipeline_setup:
            logger.info("‚úÖ Analytics pipeline setup successful")

        # Cleanup
        if os.path.exists(test_file):
            os.remove(test_file)

        assert True

    except Exception as e:
        logger.error(f"‚ùå Cloud storage test failed: {e}")
        return False


