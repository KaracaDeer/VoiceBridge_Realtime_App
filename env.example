# VoiceBridge Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MYSQL_CONNECTION_STRING=mysql+mysqlconnector://root:password@localhost:3306/voicebridge
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-32-byte-encryption-key-here-12345678901234567890123456789012

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Audio Processing Configuration
MAX_AUDIO_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a,flac,webm
SAMPLE_RATE=16000
DEFAULT_LANGUAGE=en

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_AUDIO_TOPIC=voicebridge-audio
KAFKA_TRANSCRIPTION_TOPIC=voicebridge-transcription

# gRPC Configuration
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# Celery Configuration (Optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# MLFlow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db
MLFLOW_DEFAULT_ARTIFACT_ROOT=./mlflow_artifacts

# Weights & Biases Configuration
WANDB_API_KEY=your-wandb-api-key-here
WANDB_ENTITY=your-wandb-entity
WANDB_PROJECT=voicebridge-speech-recognition

# Monitoring Configuration
PROMETHEUS_METRICS_ENABLED=true
GRAFANA_DASHBOARD_URL=http://localhost:3001
MLFLOW_UI_URL=http://localhost:5000